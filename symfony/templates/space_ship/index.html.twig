{% extends 'base.html.twig' %}

{% block title %}SpaceShip index{% endblock %}

{% block body %}
    <h1>SpaceShip index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>FuelType</th>
                <th>Size</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for space_ship in space_ships %}
            <tr>
                <td>{{ space_ship.id }}</td>
                <td>{{ space_ship.matricule }}</td>
                <td>{{ space_ship.fuelType }}</td>
                <td>{{ space_ship.size }}</td>
                <td>
                    <a href="{{ path('space_ship_show', {'id': space_ship.id}) }}">show</a>
                    <a href="{{ path('space_ship_edit', {'id': space_ship.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('space_ship_new') }}">Create new</a>
{% endblock %}